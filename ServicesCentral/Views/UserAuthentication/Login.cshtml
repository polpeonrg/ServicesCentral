@{
    ViewData["Title"] = "Login";
}
@model ServicesCentral.Models.DTO.LoginModel

<h3 class="text-center">login</h3>

<form asp-controller="UserAuthentication" asp-action="Login" method="post">
    <div class="form-group my-2">
        <label asp-for="Username" class="my-2">Username</label><br />
        <input type="text" asp-for="Username" class="form-control"/>
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>
    <div class="form-group my-2">
        <label asp-for="Password" class="my-2">Password</label><br />
        <input type="password" asp-for="Password" class="form-control"/>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-primary" type="submit">Login</button>
        <a class="btn btn-sec" href="/UserAuthentication/Registration">Sign up</a>
    </div>

</form>