@{
    ViewData["Title"] = "Create Services";
}
@model IEnumerable<ServicesCentral.Models.Services>

@if (Model.Count() > 0)
{
    <h3 class="text-center">All Services</h3>
    <!-- ถ้ามีจำนวน row -->
    <table class="table table-striped">
        <thead class="table-dark">
            <tr>
                <th class="text-white">Service genre</th>
                <th class="text-white">Edit</th>
                <th class="text-white">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var genre in Model)
            {
                <tr>
                    <td>@genre.GenreName</td>
                    <td>
                        <a class="btn btn-table btn-warning"
                           asp-controller="Services"
                           asp-action="Edit"
                           asp-route-id="@genre.Id">Edit</a>
                    </td>
                    <td>
                        <a class="btn btn-table btn-danger"
                           asp-controller="Services"
                           asp-action="Delete"
                           asp-route-id="@genre.Id"
                           onclick="return confirm('Do you want to delete @genre.GenreName ?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-secondary">Not have services</div>
}

<a class="btn btn-secondary" asp-area="" asp-controller="Services" asp-action="Add">Back</a>